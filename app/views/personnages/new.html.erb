<%= form_with @personnage.permit(:name, :niveau, :personnage_class) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :niveau %>
    <%= form.number_field :niveau %>
    <%= form.label :personnage_class %>
    <%= form.text_field :personnage_class %>
    <%= form.submit %>
<% end %>

<form action="/update">
  <label for="name">Nom :</label>
  <input type="text" name="nom" id="name">
  <label for="niveau">Niveau :</label>
  <input type="text" name="niveau" id="niveau">
  <label for="personnage_class">Classe :</label>
  <input type="text" name="classe" id="personnage_class">
  <button type="submit">Update</button>
</form>

