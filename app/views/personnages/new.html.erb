<%= form_with method: :post,  url: personnages_path("pseudo") do %>
  <%= label_tag("pseudo[name]", "Nom:") %>
  <%= text_field_tag("pseudo[name]") %>
  <%= label_tag("pseudo[niveau]", "Niveau:") %>
  <%= number_field_tag("pseudo[niveau]") %>
  <%= label_tag("pseudo[personnage_class]", "Classe:") %>
  <%= text_field_tag("pseudo[personnage_class]") %>
  <%= submit_tag("Create") %>
<% end %>